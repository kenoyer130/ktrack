<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jkenoyer.ktrack.ViewKidActivity"
    android:id="@+id/ViewKidActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/lblViewKid_Name"
            android:text="Viewing Kid X"
            android:layout_width="match_parent"
            android:textSize="40px"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/lblViewKid_Credit"
            android:text="Merit"
            android:layout_marginTop="40px"
            android:textSize="50px"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="#ff1aff10" />

        <Button
            android:id="@+id/lblViewKid_Demerit"
            android:text="Demerit"
            android:textSize="50px"
            android:layout_marginTop="40px"
            android:layout_height="120px"
            android:layout_width="match_parent"
            android:background="#ffff1607" />
        <Button
            android:id="@+id/lblViewKid_Withdrawel"
            android:text="Withdrawel"
            android:textSize="50px"
            android:layout_marginTop="40px"
            android:layout_height="120px"
            android:layout_width="match_parent"
            android:background="#ff0d28ff" />
        <EditText
            android:id="@+id/lblViewKid_nbrAmount"
            android:layout_marginTop="40px"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/lblViewKid_lstReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <Button
            android:id="@+id/lblViewKid_btnSave"
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</RelativeLayout>
