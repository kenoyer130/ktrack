<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ktrack.jkenoyer.ktrack.CreateAccountActivity"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtCreateEmailLogin"
            android:hint="Email login" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtCreateVerifyEmailLogin"
            android:hint="Verify Email login" />


    <EditText
        android:layout_width="match_parent"
        android:ems="10"
        android:layout_height="wrap_content"
        android:id="@+id/txtCreateUserName"
        android:hint="Name" />

     <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtFamily"
            android:hint="Family Name"
      />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtCreatePassword"
        android:hint="Password" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtCreateConfirm"
        android:hint="Confirm"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCreateError"
        android:textColor="#ffff0e07"
 />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Creata Account"
            android:id="@+id/btnCreateAccount"
            />

   </LinearLayout>

</RelativeLayout>
